<% content_for(:header) do %>
  <%= link_to "", :back, class: "ui-btn ui-icon-arrow-l ui-btn-icon-notext ui-corner-all" %>
  <h1>Resumo</h1>
<% end %>

<ul data-role="listview" data-inset="true">
  <li data-role="list-divider">Mesa <%= current_table %></li>
  <% @summaries["items"].each do |product| %>
    <li class="product_<%= product['id'] %>">
      <%= link_to product["name"], 
        remove_orders_path(id: product["id"]), 
        remote: true, 
        data: { confirm: "Confirmar?" } %> 
      <span class="ui-li-count">R$ <%= product["price"] %></span>
    </li>
  <% end %>
</ul>

<% content_for(:footer) do %>
  <%= link_to "Salvar", :orders, method: :post, class: "ui-btn ui-btn-inline" %>
  <%= link_to "Fechar Mesa", :pay_orders, class: "ui-btn ui-btn-inline" %>
<% end %>
