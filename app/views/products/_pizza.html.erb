<%= form_tag :add_from_form_orders, remote: true, class: "pizza-form" do %>
  <fieldset data-role="controlgroup" data-type="horizontal" data-mini="true">
    <%= label_tag "radio-choice-1", "P" %>
    <%= radio_button_tag 'size', 'P', true, id: "radio-choice-1" %>

    <%= label_tag "radio-choice-2", "M" %>
    <%= radio_button_tag 'size', 'M', false, id: "radio-choice-2" %>

    <%= label_tag "radio-choice-3", "G" %>
    <%= radio_button_tag 'size', 'G', false, id: "radio-choice-3" %>

    <%= label_tag "radio-choice-4", "Especial" %>
    <%= check_box_tag 'special', 'true', false, id: "radio-choice-4" %>

    <%= label_tag "radio-choice-5", "Borda" %>
    <%= check_box_tag 'border', 'true', false, id: "radio-choice-5" %>
  </fieldset>

  <fieldset data-role="controlgroup" data-mini="true">
    <% Flavor.all.each_with_index do |f, index| %>
      <%= check_box_tag "checkbox-#{index}", f.name.capitalize, false, name: "flavors[]" %>
      <%= label_tag "checkbox-#{index}", f.name.capitalize %>
    <% end %>
  </fieldset>
<% end %>

<% content_for(:add_pizza_button) do %>
  <%= link_to "Add", "", remote: true, method: :post, class: "ui-btn ui-btn-inline ui-corner-all btn-blue form-submit" %>
<% end %>
