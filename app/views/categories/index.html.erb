  <%#= f.text_field :name, placeholder: "Nome" %>
  <%#= f.submit %>
<%# end %>

<div data-role="page" id="page2">
  <div data-role="header">
    <%= link_to "", :tables, class: "ui-btn ui-icon-arrow-l ui-btn-icon-notext ui-corner-all" %>
    <%= link_to "Resumo", "", class: "ui-btn-right ui-btn ui-btn-inline ui-mini ui-corner-all" %>
    <h1>Mesa <%= current_table %></h1>
  </div>

  <div role="main" class="ui-content">
    <ul data-role="listview" data-inset="true" data-filter="true" data-filter-placeholder="Procurar">
      <% @categories.each do |c| %>
        <li><%= link_to c.name, products_path(id: c.id) %></li>
      <% end %>
    </ul>
  </div>

	<div data-role="footer" data-position="fixed" align="center">
		<%= link_to "Salvar", :orders, method: :post, class: "ui-btn ui-btn-inline" %>
	</div>
</div>

