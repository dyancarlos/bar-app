<% unless order.items.blank? %>
  <div class="order" style="background: <%= order.shower_color %>">

    <div class="order-table-number">
      <%= order.table.customId %>
    </div>

    <div class="order-time">
      <%= time_ago_in_words(order.updated_at) %>
    </div>
    <div class="clear"></div>

    <br />

    <% order.items.reverse_each do |item| %>
      <div class="order-items">
        <h3><%= item['quantity'] %>x <%= item['name'] %> <%= item['size'] %></h3>
    
        <% unless item['flavors'].blank? %>
          <% item['flavors'].each do |f| %>
            <li><%= f %></li>
          <% end %>
        <% end %>

        <p><%= item['observation'].map(&:upcase).join(", ") %> </p>
      </div>
    <% end %>
  </div>
<% end %>
